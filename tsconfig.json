{
  "compilerOptions": {
    "target": "es2020",                                  
    // "lib": [],                                        
    "module": "commonjs",                                
    "rootDir": "./src",                                  
    "moduleResolution": "node10",                     
    "sourceMap": true,                                
    "outDir": "./lib",                                  
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noUnusedLocals": true,                           
    "noImplicitReturns": true,                       
    "skipLibCheck": true,
  },
  "include": [
    "src"
  ]
}
